@model CyberGuardian360.Models.Filter
@using Microsoft.AspNetCore.Identity
@inject SignInManager<CyberGuardian360.Models.EFDBContext.UserRegistration> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Apply Filters</h5>
                    <hr>
                    <form id="frmCategories">
                        @foreach (var checkbox in Model.CheckBoxes)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@checkbox.Id" id="@checkbox.Id" name="chkCategories">
                                <label class="form-check-label" for="@checkbox.Id">@checkbox.Name</label>
                            </div>
                        }
                        <hr>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Apply Filter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="container">
                <h2 class="text-center">Products</h2>
                <div class="row mt-5 mb-3">
                    @if (Model.CSProductsViewModel.Count > 0)
                    {
                        @foreach (var product in Model.CSProductsViewModel)
                        {
                            <div class="col-sm-12 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <img src="product_images/@product.ImageUrl" class="card-img-top" alt="Product Image" style="height:150px;width:150px">
                                            </div>
                                            <div class="col-md-8">
                                                <h5 class="card-title">@product.ProductName</h5>
                                                <p class="card-text">Price: £@product.ProductCost</p>
                                                <p class="card-text">Rating: @product.ProductRating</p>
                                                <p class="card-text">Description: @product.ProductDescription</p>
                                                <div class="text-right">
                                                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-primary">Add to Cart</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-md-12">
                            <p class="text-center">No products available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row g-3 col-form-label-lg paddingtop3rem">You are logged out. Please sign In.</div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#frmCategories').submit(function (e) {
                e.preventDefault(); 

                var selectedCategories = [];
                $('input[name="chkCategories"]:checked').each(function () {
                    selectedCategories.push($(this).val());
                });

                $.ajax({
                    url: '@Url.Action("GetProductsByFilter", "CSProducts")',
                    type: 'GET',
                    data: { chkCategories: selectedCategories },
                    traditional: true,
                    success: function (result) {                        
                        $('#productsSection').html(result);
                    },
                    error: function () {                        
                        alert('Error occurred while filtering products.');
                    }
                });
            });
        });
    </script>
}
