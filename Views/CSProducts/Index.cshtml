@model CyberGuardian360.Models.Filter
@using Microsoft.AspNetCore.Identity
@inject SignInManager<CyberGuardian360.Models.EFDBContext.UserRegistration> SignInManager
@if (SignInManager.IsSignedIn(User))
{
    @*    <form asp-controller="CSProducts" asp-action="GetProductsByFilter" method="post">
*@
    <table class="w100">
        <tr>
            <form id="frmCategories">
            <td class="w20 valign-top">
                <div>
                    <p class="t-center"><b>Apply Filters</b></p>
                    <hr>
                    <p><b>Category:</b></p>

                        @for (var i = 0; i < Model.CheckBoxes.Count; i++)
                        {
                        <div class="form-check">
                                @*<input class="form-check-input" type="checkbox" value=@Model.CheckBoxes[i].Id id=@Model.CheckBoxes[i].Id name="chkCategories">*@
                            <label>
                                <input class="form-check-input" type="checkbox" value=@Model.CheckBoxes[i].Id id=@Model.CheckBoxes[i].Id name="chkCategories" />
                                    @Model.CheckBoxes[i].Name
                            </label>
                                @*<label class="form-check-label" for=@Model.CheckBoxes[i].Checked>@Model.CheckBoxes[i].Name</label>*@


                                @*<input class="form-check-input" type="checkbox" value=@Model.CheckBoxes[i].Id id=@Model.CheckBoxes[i].Id name="chkCategories">
                    <label class="form-check-label" for=@Model.CheckBoxes[i].Checked>@Model.CheckBoxes[i].Name</label>*@
                        </div>
                        }
                    <hr>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <button type="submit" class="btn btn-sm cust_btn" id="btnfilter">Apply Filter</button>
                    </div>
                </div>
            </td>
            </form>
            <td class="w80">
                <div class="container">
                    <p class="t-center" style="font-size:20px"><b>Products</b></p>
                    <div class="row mt-5 mb-3">
                        @if (Model.CSProductsViewModel != null && Model.CSProductsViewModel.Count > 0)
                        {
                            @foreach (var product in Model.CSProductsViewModel)
                            {
                                <div class="col-sm-12 mb-4">
                                    <div class="card">
                                        <table border="0">
                                            <tr>
                                                <td style="width:15%">
                                                    <img src="product_images/@product.ImageUrl" class="card-img-top" alt="Product Image" style="height:150px;width:150px">
                                                </td>
                                                <td style="width:65%">
                                                    <div class="card-body">
                                                        <h5 class="card-title">@product.ProductName</h5>
                                                        <p class="card-text">Price: £@product.ProductCost</p>
                                                        <p class="card-text">Rating: @product.ProductRating</p>
                                                        <p class="card-text">Description: @product.ProductDescription</p>
                                                    </div>
                                                </td>
                                                <td style="width:25%; text-align:right; padding-right:1rem;">
                                                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-primary cust_btn">Add to Cart</a>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div></div>
                        }
                    </div>
                </div>
            </td>
        </tr>
    </table>
    @*    </form>
*@}
else
{
    <div class="row g-3 col-form-label-lg paddingtop3rem">You are logged out. Please sign In.</div>
}

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#btnfilter').click(function () {
                debugger;
                var selectedCategories = [];
                $('input[name="chkCategories"]:checked').each(function () {
                    selectedCategories.push($(this).val());
                });
                $.ajax({
                    url: '@Url.Action("GetProductsByFilter","CSProducts")',
                    type: 'GET',
                    data: { 'chkCategories[]': selectedCategories },
                    success: function (result) {
                        alert('success');
                    },
                    error: function () {
                        alert('error-filter');
                    }
                });
            });
        });
    </script>
}