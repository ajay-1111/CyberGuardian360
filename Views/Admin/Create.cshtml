@model CyberGuardian360.Models.EFDBContext.CSProducts

@{
    ViewData["Title"] = "Add CS Product";
}

<form asp-action="Create" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <div class="row g-3">
        <div class="cust_btn row g-3 col-form-label-lg">Create New Cyber Security Product</div>
        <div class="cust_pg_body row g-3">
            <div class="form-group col-md-3">
                <span class="colorred"><b>*</b></span>
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" class="form-control" required />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <span class="colorred"><b>*</b></span>
                <label asp-for="ProductCost"></label>
                <input asp-for="ProductCost" class="form-control" required />
                <span asp-validation-for="ProductCost" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <span class="colorred"><b>*</b></span>
                <label asp-for="ProductRating"></label>
                <input asp-for="ProductRating" class="form-control" required />
                <span asp-validation-for="ProductRating" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <span class="colorred"><b>*</b></span>
                <label asp-for="ProductCategoryId"></label>
                <select asp-for="ProductCategoryId" class="form-control-ddl" required>
                    <option value="1" selected>Anti Virus Software</option>
                    <option value="2">Firewall Solutions</option>
                    <option value="3">Data Encryption Tools</option>
                </select>
                <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <span class="colorred"><b>*</b></span>
                <label asp-for="ImageUrl"></label>
                <input class="form-control-file" type="file" id="ImageUrl" required name="ImageUrl" />
                @*<span asp-validation-for="ImageUrl" class="text-danger"></span>*@
            </div>
            <div class="form-group col-md-9">
                <label asp-for="ProductDescription"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm cust_btn">Create Product</button>
            </div>
        </div>
    </div>
</form>