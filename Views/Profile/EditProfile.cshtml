@model CyberGuardian360.Models.Profile
@using Microsoft.AspNetCore.Identity
@inject SignInManager<CyberGuardian360.Models.EFDBContext.UserRegistration> SignInManager

@{
    ViewData["Title"] = "Edit Profile";
}
<form asp-controller="Profile" asp-action="EditProfile" method="post">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="row g-3">
            <div class="cust_btn row g-3 col-form-label-lg">Edit Profile</div>
            <div class="cust_pg_body row g-3">
                <div class="form-group col-md-3">
                    <span class="colorred"><b>*</b></span>
                    <label asp-for="GivenName"></label>
                    <input asp-for="GivenName" class="form-control" required />
                    <span asp-validation-for="GivenName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <span class="colorred"><b>*</b></span>
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" required />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <span class="colorred"><b>*</b></span>
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" required />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <span class="colorred"><b>*</b></span>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" readonly disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm cust_btn">Update</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-3 col-form-label-lg paddingtop3rem">You are logged out. Please sign In.</div>
    }
</form>